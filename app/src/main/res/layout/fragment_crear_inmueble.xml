<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.inmuebles.CrearInmuebleFragment"
    android:id="@+id/crearInmueble">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:spacing="10dp">

            <ImageView
                android:id="@+id/ivFotoInmueble"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnSeleccionarFoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccionar Foto" />

            <EditText
                android:id="@+id/etDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="DirecciÃ³n" />

            <EditText
                android:id="@+id/etPrecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="Precio" />

            <EditText
                android:id="@+id/etAmbientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Ambientes" />

            <EditText
                android:id="@+id/etUso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Uso (Ej: Residencial)" />

            <EditText
                android:id="@+id/etTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tipo (Ej: Casa, Dpto...)" />

            <EditText
                android:id="@+id/etLatitud"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@null"
                android:enabled="true"
                android:hint="Latitud"
                android:inputType="numberDecimal"
                android:paddingBottom="2dp" />

            <EditText
                android:id="@+id/etLongitud"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@null"
                android:enabled="true"
                android:hint="Longitud"
                android:inputType="numberDecimal"
                android:paddingBottom="2dp" />

            <EditText
                android:id="@+id/etSuperficie"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@null"
                android:enabled="true"
                android:hint="Superficie"
                android:inputType="numberDecimal"
                android:paddingBottom="2dp" />
            <CheckBox
                android:id="@+id/cbDisponible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disponible"
                android:enabled="false"/>

            <Button
                android:id="@+id/btnGuardarInmueble"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar Inmueble"
                android:layout_marginTop="12dp" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>